DECLARE
fname varchar(20);
lname varchar(20);
temp number;

BEGIN
temp:=:num;
select firstname, lastname into fname, lname from student157 where sid=temp;

DBMS_OUTPUT.PUT_LINE(&#39; student name : &#39;|| fname || &#39; &#39; || lname );

EXCEPTION
When No_DATA_FOUND THEN
DBMS_OUTPUT.PUT_LINE(&#39;No such student bro.&#39;);
END;
